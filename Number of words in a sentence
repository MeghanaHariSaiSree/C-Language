#include<stdio.h>
void main()
{
    char s[50];
    printf("Enter a sentence : ");
    gets(s);
    int len=strlen(s);
    int count=0;
    for(int i=0;i<len;i++)
    {
        if(s[i]==' '&&s[i+1]!=' ')
        {
            count=count+1;
        }

    }
  printf("There are %d words in the sentence",count+1);

}
