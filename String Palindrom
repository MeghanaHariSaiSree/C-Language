#include <stdio.h>
#include<string.h>

int main()
{
    char str[100],str1[100];
    int length = 0; 
    printf("Enter a string: ");
    scanf("%s", str);
    strcpy(str1,str);
    for (length = 0; str[length] != '\0'; length++);
    for (int i = 0, j = length - 1; i < j; i++, j--)
    {
        char temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
    if(strcmp(str1,str)==0)
    {
        printf("%s is a palindrom",str1);
    }
    else
    {
        printf("%s is not a palindrom",str1);
    }

    return 0;
}
