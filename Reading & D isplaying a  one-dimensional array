#include<stdio.h>
int main()
{
    int size;
    printf("Enter a number of elements you want in an array : ");
    scanf("%d",&size);
     int arr[size];
    for(int i=0;i<size;i++)
    {
        printf(" Enter the element of index %d :",i);
        scanf("\n %d",&arr[i]);
    }
    printf("\n Displaying the one dimensional array of %d elements : \n",size);
    for(int i=0;i<size;i++)
    {
     printf(" %d \t",arr[i]);
    }
    return 0;
}
