#include<stdio.h>
#include<conio.h>
struct student{
    char name[50];
    int marks[5];
    float average
};
void main()
{
    struct student s[3];
    for(int i=0;i<3;i++)
    {
        printf("Enter information of student %d....\n ",i+1);
        printf("Enter name : ");
        scanf("%s",s[i].name);
        printf("Enter the marks of 5 subjects:\n");
        int sum=0;
        for(int j=0;j<5;j++)
        {
            printf("Marks of subject%d : ",j+1);
            scanf("%d",&s[i].marks[j]);
            sum = sum + s[i].marks[j];
        }
        printf("\n\n");
        s[i].average = (float)sum/5.0;

    }
    printf("\n");

    int max_index=0;
    float max_average=s[0].average;
    for(int i=1;i<3;i++)
    {
        if(max_average < s[i].average)
        {
            max_average = s[i].average;
            max_index = i;
        }

    }



    printf("The topper of the session is %s",s[max_index].name);
    printf("The average is : %.2f",s[max_index].average);
}
