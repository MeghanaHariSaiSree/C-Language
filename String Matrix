#include<stdio.h>
void main()
{
    char a[20],b[20],c[20];
    printf("Enter first string :");
    gets(a);
    printf("Enter second string :");
    gets(b);
    printf("Enter third string :");
    gets(c);
    int len1=strlen(a);
    int len2=strlen(b);
    int len3=strlen(c);
    if(len1==len2 && len2==len3)
    {
       for(int i=0;i<len1;i++)
       {
           printf("  %c",a[i]);
       }
       printf("\n\n");

       for(int i=0;i<len2;i++)
       {
           printf("  %c",b[i]);
       }
       printf("\n\n");

       for(int i=0;i<len3;i++)
        {
            printf("  %c",c[i]);
        }
        printf("\n\n");
    }
    else
        printf("Please enter the strings of same length");

}
