#include <stdio.h>

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", &n);
    int arr[n];
    if (n <= 0)
    {
        printf("Invalid size. Please enter a positive integer.");
        return 0;
    }
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) 
    {
        printf("Element [%d]: ", i);
        scanf("%d", &arr[i]);
    }
    printf("Array elements:\n");
    for (int i = 0; i < n; i++) {
        printf("%d \t",arr[i]);
    }
    return 0;
}
