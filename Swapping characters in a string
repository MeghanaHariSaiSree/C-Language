#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    char ch1, ch2;
    printf("Enter the string : ");
    fgets(str, sizeof(str), stdin);
    printf("Enter a character in the string : ");
    scanf(" %c", &ch1);
    printf("Enter another character in the string : ");
    scanf(" %c", &ch2);
    int len=strlen(str);
    for (int i = 0;i<len; i++) {
        if (str[i] == ch1) {
            str[i] = ch2;
        } else if (str[i] == ch2) {
            str[i] = ch1;
        }
    }
    printf("Modified strung after swapping %c with %c is %s",ch1,ch2,str);
    return 0;

}
